def create_graph():
    fig = go.Figure()
    
    months = ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun']
    income = [4500, 4800, 4700, 4850, 4900, 5100]
    expenses = [3800, 3900, 3850, 3700, 3800, 3900]

    fig.add_trace(go.Scatter(
        x=months,
        y=income,
        name='Income',
        line=dict(color='#FFD700', width=3),
        mode='lines+markers'
    ))
    
    fig.add_trace(go.Scatter(
        x=months,
        y=expenses,
        name='Expenses',
        line=dict(color='#94A3B8', width=3),
        mode='lines+markers'
    ))

    fig.update_layout(
        plot_bgcolor='rgba(0,0,0,0)',
        paper_bgcolor='rgba(0,0,0,0)',
        font=dict(color='#94A3B8'),
        margin=dict(l=40, r=20, t=20, b=40),
        showlegend=True,
        legend=dict(
            orientation="h",
            yanchor="bottom",
            y=1.02,
            xanchor="right",
            x=1
        ),
        xaxis=dict(
            showgrid=False,
            showline=True,
            linecolor='rgba(255,255,255,0.1)',
            fixedrange=True  # Prevents x-axis zoom/pan
        ),
        yaxis=dict(
            showgrid=True,
            gridcolor='rgba(255,255,255,0.1)',
            showline=True,
            linecolor='rgba(255,255,255,0.1)',
            fixedrange=True  # Prevents y-axis zoom/pan
        ),
        dragmode=False  # Disables all dragging
    )
    
    config = {
        'displayModeBar': False,  # Removes the mode bar
        'staticPlot': True  # Makes the entire plot static
    }
    
    return fig.to_html(full_html=False, include_plotlyjs='cdn', config=config)

def create_spending_graph():
    fig = go.Figure()
    
    months = ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun']
    expenses = [1200, 950, 1100, 880, 1050, 920]
    categories = ['Bills', 'Shopping', 'Food', 'Transport']
    
    for i, category in enumerate(categories):
        fig.add_trace(go.Bar(
            name=category,
            x=months,
            y=[expenses[j] * (0.1 + i * 0.2) for j in range(len(months))],
            marker_color=['#FFD700', '#FFC700', '#FFB700', '#FFA700'][i]
        ))

    fig.update_layout(
        barmode='stack',
        plot_bgcolor='rgba(0,0,0,0)',
        paper_bgcolor='rgba(0,0,0,0)',
        font=dict(color='#94A3B8'),
        margin=dict(l=40, r=20, t=20, b=40),
        showlegend=True,
        legend=dict(
            orientation="h",
